      \IfFileExists{\AsyFile_.tex}{%
        \catcode`:=12
        \@@input\AsyFile_.tex\relax
      }{%
        \PackageWarning{asymptote}{%
          file `\AsyFile.\AsyExtension' or `\AsyFile_.tex' not found%
        }%
      }
    }
  \fi
}
